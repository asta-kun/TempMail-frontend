//estilos del footer normal
@keyframes heartEffect {
  0%{
    transform: scale(1);
  }
  50%{
    transform: scale(1.3);
  }
  100%{
    transform: scaleX(1);
  }
}




.Footer
  height: 120px
  background: var(--background-boxs)
  position: relative;
  & .apps
    display: flex
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid var(--background-boxs-border)
    & a
      color: var(--background-boxs-text)
      padding: 10px 30px
      height: inherit;
      display: flex;
      align-items: center;
      transition: 1s
      &:hover
        color:var(--background-boxs-text-hover)

  & .bottom
    padding-top: 10px
    position: absolute;
    bottom: 10px
    color: var(--background-boxs-text)
    left: 10%
    right: 10%
    margin: 10px auto
    font-size: 13px
    font-weight: 600
    display: flex;
    justify-content: space-between;
    align-items: center;
    & svg
      font-size: 12px
      animation: heartEffect 2s linear infinite
      &:nth-child(1)
        color: #ed4200
      &:nth-child(2)
        color: #bd8554
