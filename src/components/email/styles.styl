.Email
    & .address 
     display:flex
     justify-content: space-between
     & > *
         flex-grow: 1
     & .right
         background: var(--background-boxs)
         border-radius: 5px
     & .left
        display: flex
        justify-content: left 
        flex-direction: column
        & .options
            margin-top: 10px
            & ul
                & li
                    background var(--background-boxs)
                    margin-right: 10px
                    padding: 10px 30px
                    cursor pointer
                    transition: .5s
                    border-radius: 2px
                    display: inline-flex
                    justify-content: center
                    align-items: center
                    &.delete:hover
                        background: #aa1515
                        color: #FFF
                    &.change:hover
                        background: #115AA8
                        color: #FFF
                    &.set:hover
                        background: #0a6f3f
                        color: #FFF
        & .left-container
            display: flex
            height: 40px
            & .countdown
                
            & .copy
                background: var(--primary-color);
                color: var(--primary-color-text);
                display: inline-flex
                align-content: center
                justify-content: center
                padding: 10px
                cursor pointer
                transition: .5s
                &:hover
                    background var(--background-boxs)
                    color: var(--background-boxs-text)
            & input
                background var(--background-boxs)
                color: var(--background-boxs-text)
                outline: 0
                border: 0
                width: 350px
                max-width: 80%
                font-size: 19px
                text-align: center
                font-family: 'Acme'
                
            